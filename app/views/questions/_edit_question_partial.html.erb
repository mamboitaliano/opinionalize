<div id="resp-type-form-box" title="Create new user">
  	
  	<div class="resp-type-container">
  		<p>set the response type:</p>
  		
  		<form id="resp-type-submit-form" action="/surveys/<%= @current_question.survey_id %>/questions/<%= @current_question.id %>" method="POST">
	  		
	  		<div class="resp-type-selector">
			    <fieldset id="answer-type">
				    <div class="radio">
				    	<label><input type="radio" class="optradio" name="resp_type" id="r1" value="textinput">text input</label>
					</div>
					<div class="radio">
						<label><input type="radio" class="optradio" name="resp_type" id="r2" value="multichoice">multiple choice</label>
					</div>
					<div class="radio">
						<label><input type="radio" class="optradio" name="resp_type" id="r3" value="chkboxes">checkboxes</label>
					</div>
			    </fieldset>
			</div>



			<div class="resp-options">

				<div class="optradio-form" id="optradio-r1" hidden>
					<p align="right">text input</p>
					<fieldset id="dummy-txtbox-form">
						<table class="dummy-txtbox-tbl">
							<tr>
								<td><div class="radio"><label><input type="radio" name="txt-answerchoice" class="txtinput-resp" id="txtinput-resp-short" value="txt-short">short answer text field</label></div></td>
							</tr>
							<tr>
								<td><input type="text" name="dummy-txtfield" placeholder="short and sweet" disabled></td>
							</tr>
							<tr>
								<td><div class="radio"><label><input type="radio" name="txt-answerchoice" class="txtinput-resp" id="txtinput-resp-long" value="txt-paragraph">paragraph answer text box</label></div></td>
							</tr>
							<tr>
								<td><textarea name="dummy-txtarea" form="dummy-txtbox-form" cols="60" rows="8" placeholder="the more the merrier" readonly></textarea></td>
							</tr>
						</table>
					</fieldset>
				</div>

				<div class="optradio-form" id="optradio-r2" hidden>
					<p align="right">multiple choice</p> 
					<button class="btn btn-primary" id="mc-add-choice" type="button">add</button>
					<fieldset id="multi-choice-field">
						<table class="answer-choice-tbl" id="actbl1">
							<tr>
								<td class="numerator" id="l1">a</td>
								<td><input class="mc-answerchoice" type="text" name="mc-answerchoice1" placeholder="write an answer choice"></td>
							</tr>
							<tr>
								<td class="numerator" id="l2">b</td>
								<td><input class="mc-answerchoice" type="text" name="mc-answerchoice2" placeholder="write an answer choice"></td>
							</tr>
						</table>
					</fieldset>
				</div>

				<div class="optradio-form" id="optradio-r3" hidden>
					<p align="right">multiple answers</p>
					<button class="btn btn-primary" id="ma-add-choice" type="button">add</button>
					<fieldset id="mult-answer-field">
						<table class="answer-choice-tbl" id="actbl2">
							<tr>
								<td class="numerator" id="n1">a</td>
								<td><input class="ma-answerchoice" type="text" name="ma-answerchoice1" placeholder="write an answer choice"></td>
							</tr>
							<tr>
								<td class="numerator" id="n2">b</td>
								<td><input class="ma-answerchoice" type="text" name="ma-answerchoice2" placeholder="write an answer choice"></td>
							</tr>
						</table>
					</fieldset>
				</div>
			</div>
			<button class="btn btn-primary cancel-button">cancel</button>
			<input class="btn btn-primary submit-answer-choices" type="submit" value="save">
		</form>
	</div>
</div>