<div class="survey-title-container">
	<div class="survey-title-form-container">
		<p id="survey-name">name:</p>
		<div class="survey-title-form">
			<%= form_tag('/surveys/create', method: "post") %>
			<%= text_field_tag(:title) %>
		</div>
		<p id="survey-description">description:</p>
		<div class="survey-description-form">
			<%= text_area_tag(:description, "", size: "61x5", class: 'survey-description-input')%>
			<!-- <hr> -->
		</div>
		<p id="survey-visibility">make it public:</p>
		<!-- <div class="survey-ispublic-form"> -->
			<%= check_box_tag(:is_public) %>
		<!-- </div> -->
		<%= submit_tag("Create Survey") %>
	</div>
</div>

