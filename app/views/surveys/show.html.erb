
<div class="panel panel-primary">

  <div class="panel-heading">
    <h3 class="panel-title"><%= @current_survey.title %></h3>
  </div>

  <form id="response_body" action="/surveys/<%= @current_survey.id %>" method="post">
    <% @current_survey.questions.each do |question| %>
    <h1> <%= question.text %></h1><br>
    <!-- Every question has only one answer, answer input is named according to ?:id -->
    <input class="form-control" type="text" name=<%= question.id %>><br>
    <% end %>
    <input type="submit" value="submit" >
  </form>
</div>

<div class="results-survey-button">
  <a href="<%= @current_survey.id %>/results">
    <button id="show_results" class="btn btn-default">results</button>
  </a>
</div>

<div class="edit-survey-button">
  <a href="/surveys/<%=@current_survey.id%>/edit">
    <button id="edit_survey" class="btn btn-default">edit</button>
  </a>
</div>
